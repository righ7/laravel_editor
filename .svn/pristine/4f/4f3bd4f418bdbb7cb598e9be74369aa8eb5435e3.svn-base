<script>

    let vm = new Vue({
        el: '#app',
        data() {
            return {
                tableColumns: [
                    {
                        title: '标题',
                        key: 'title',
                        width: 630,
                        render (h,params){
                            let row = params.row;
                            let text = row.title;
                            //return h('span',text);
                            return h('a', {
                                attrs: {
                                    href:row.display_url,
                                    target: "view_window"
                                }
                            }, text);
                        }
                    },
                    {
                        title: '类型',
                        key: 'type',
                        width: 100,
                        render (h,param){
                            let text = '';
                            switch(Number(param.row.type)){
                                case 1:
                                    text = '专辑';
                                    break;
                                case 0:
                                    text = '图集';
                                    break;
                            }
                            return h('Tag',text);
                        }
                    },
                    {
                        title: '频道',
                        key: 'source',
                        width: 135
                    },
                    {
                        title: '阅读数',
                        key: 'go_detail_count',
                        width:85
                    },
                    {
                        title: '评论数',
                        key: 'comments_count',
                        width: 130
                    },
                    {
                        title: '文章发布时间',
                        key: 'behot_time',
                        width: 150
                    },
                    {
                        title: '#',
                        key: 'none',
                        width: 150
                    },
                    {
                        title: '#',
                        key: 'none',
                        width: 150
                    }
                ],
                tableData: [],
                searchArr: {
                    title: '',
                    author: '',
                    status: '',
                    publish_time: '',
                    platform_article_status: '',
                },
                pageSize: 100,
                pageCount: 20,
                amount: 0,
            }
        },
        methods: {
            getArticleIssueData() {
                axios.get("http://tm.youdnr.com/api/temai/article/day_hotarticle", {
                    params: {
                        article_type:0,
                        page: 1,
                        page_count: this.pageCount
                    }
                })
                    .then(function (response) {
                        vm.tableData = response.data.data;
                        vm.amount = response.data.total;
                    })
                    .catch(function (error) {
                        console.log(error);
                    });
            },
            search() {
                console.log('234');
                this.searchArr['title']=this.searchArr['title'].replace(/\+/g,'%2B')
                axios.get("http://tm.youdnr.com/api/temai/article/day_hotarticle", {
                    params: {
                        article_type:0,
                        page: 1,
                        page_count: this.pageCount,
                        //searchArr: this.searchArr
                    }
                })
                    .then(function (response) {
                        vm.tableData = response.data.data;
                        vm.amount = response.data.total;
                    })
                    .catch(function (error) {
                        console.log(error);
                    });
            },
            reject(article_id = '', article_ids = '', reject_reason = '') { // 驳回
                let that = this;

                if(article_ids === true){
                    article_id = '';
                    article_ids = [];
                    this.$refs.selection.getSelection().map(item => {
                        article_ids.push(item.id);
                    });
                }

                that.$Modal.confirm({
                    render: (h) => {
                        return h('i-input', {
                            props: {
                                autofocus: true,
                                type: 'textarea',
                                rows: 4,
                                placeholder: '请输入驳回原因...'
                            },
                            on: {
                                input: (val) => {
                                    reject_reason = val;
                                }
                            }
                        })
                    },
                    onOk(){
                        axios.get("{:U('Platform/AccountIssue/changeArticle')}", {
                            params: {article_id,article_ids,reject_reason}
                        }).then(response => {
                            that.$Message.success(response.data);
                            that.tableSearch();
                        })
                    }
                });
            },
            pageChange(index) {
                window.scrollTo(0,0); // 触发回到顶部，再加载数据
                axios.get("http://tm.youdnr.com/api/temai/article/day_hotarticle", {
                    params: {
                        article_type:0,
                        page: index,
                        page_count: this.pageCount,
                        searchArr: this.searchArr
                    }
                })
                    .then(function (response) {
                        vm.tableData = response.data.data;
                        vm.amount = response.data.total;
                    })
                    .catch(function (error) {
                        console.log(error);
                    });
            },
            dateValueFormat(f,v){
                this.searchArr.time = f;
            }
        }
    });

    vm.getArticleIssueData();
</script>
{{--@stop--}}